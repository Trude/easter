{{#if isBeforeGametime}}
  <div>Tid til neste hint blir tilgjengelig:</div>
  <div class="count-down">{{count-down actionHour=11 action="beginHunt"}}</div>

{{else}}
  {{#if (eq currentQuestion 0)}}
    <div>Er du klar for å starte quizzen Svein?</div>
    <button {{action 'GotoQ1'}}>Gå til første spørsmål</button>

  {{else if (eq currentQuestion 1)}}
    <div class="question">Hva er er 2 dusin ganger 3 snes ganger 1 skokk?</div>
    {{input value=a1}}

    <button {{action 'GotoQ2'}}>Gå til neste spørsmål!</button>

  {{else if (eq currentQuestion 2)}}
    <div class="question">Du har 10 fisk i akvariumet ditt før du reiser på en ukes ferie. Den </div>
    <div class="answer">{{#radio-button value=7 groupValue=fisk changed="fiskesvar"}} 7 {{/radio-button}}</div>
    <div class="answer">{{#radio-button value=10 groupValue=fisk changed="fiskesvar"}} 10 {{/radio-button}}</div>
    <div class="answer">{{#radio-button value=5 groupValue=fisk changed="fiskesvar"}} 5 {{/radio-button}}</div>
    <div class="answer">{{#radio-button value=8 groupValue=fisk changed="fiskesvar"}} 8 {{/radio-button}}</div>
    <button {{action 'GotoQ3'}}>Gå til neste spørsmål!</button>


  {{else if (eq currentQuestion 3)}}
      <div class="question">Det er hvit sitt trekk. Hva er neste trekk for å sette svart i sjakk matt på to trekk?</div>
      <div class="answer">{{#radio-button value=1 groupValue=sjakk changed="sjakksvar"}} Sara Palin {{/radio-button}}</div>
      <div class="answer">{{#radio-button value=2 groupValue=sjakk changed="sjakksvar"}} Stefani Joanne Angelina Germanotta {{/radio-button}}</div>
      <div class="answer">{{#radio-button value=3 groupValue=sjakk changed="sjakksvar"}} Sharon Sand Stone {{/radio-button}}</div>
      <div class="answer">{{#radio-button value=4 groupValue=sjakk changed="sjakksvar"}} Jenine Bescudo {{/radio-button}}</div>
      <div class="answer">{{#radio-button value=5 groupValue=sjakk changed="sjakksvar"}} Qd7+ {{/radio-button}}</div>
      <img class="question-image" src="images/chess.png" />
      <button {{action 'GotoQ4'}}>Gå til neste spørsmål!</button>

  {{else if (eq currentQuestion 4)}}
      <div class="question">Hvem forbinder du med filmen Home, Robyn Fenty og plata Anti.</div>
      <div class="answer">{{#radio-button value=1 groupValue=rihanna changed="rihannasvar"}} Lady Gaga {{/radio-button}}</div>
      <div class="answer">{{#radio-button value=2 groupValue=rihanna changed="rihannasvar"}} Britney Spears {{/radio-button}}</div>
      <div class="answer">{{#radio-button value=3 groupValue=rihanna changed="rihannasvar"}} Beyonce {{/radio-button}}</div>
      <div class="answer">{{#radio-button value=4 groupValue=rihanna changed="rihannasvar"}} Taylor Swift {{/radio-button}}</div>
      <div class="answer">{{#radio-button value=5 groupValue=rihanna changed="rihannasvar"}} Rihanna {{/radio-button}}</div>
      <button {{action 'GotoQ5'}}>Gå til neste spørsmål!</button>

  {{else if (eq currentQuestion 5)}}
    {{#if allAnswersCorrect}}
      <div class="question">Jippi! Du svarte alt rett! Dine bokstaver er <b>GEG</b>.</div>
      <div>Slå de sammen med bokstavene til de andre, så kanskje dere kommer videre!</div>
      {{main-answer}}
    {{else}}
      <div>Ånei! Du hadde noen svar feil!</div>
      <button {{action 'GotoQ1'}}>Prøv på nytt!</button>
    {{/if}}
  {{/if}}
{{/if}}
